doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block navigation
      nav.bg-blue-600.p-4
          .container.mx-auto.flex.justify-between.items-center
            .text-white.text-lg.font-bold
              a(href="/") DiveSphere
            ul.flex.space-x-4
              each item in navItems
                li
                  a.text-white(class="hover:text-gray-300", href=item.href)= item.text


    block content

  // TailwindCSS and DaisyUI Scripts
  script(src="https://cdn.jsdelivr.net/npm/tailwindcss@^2/dist/tailwind.min.js")
  script(src="https://cdn.jsdelivr.net/npm/daisyui/dist/full.js")
